generator client {
    provider   = "prisma-client-js"
    output     = "../src/generated/prisma"
    engineType = "client" // penting â†’ no Rust engine
}

datasource db {
    provider = "postgresql"
}

// ===== Models =====

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    budgets  Budget[]
    expenses Expense[]
    refreshTokens RefreshToken[]
}

// Budget per user per period (YYYY-MM)
model Budget {
    id        Int      @id @default(autoincrement())
    userId    Int
    period    String // "2025-12"
    amount    Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User @relation(fields: [userId], references: [id])

    @@unique([userId, period], name: "userId_period")
}

// Expense per user (nanti bisa ditambah period / kategori dll)
model Expense {
    id          Int      @id @default(autoincrement())
    userId      Int
    description String
    amount      Int
    createdAt   DateTime @default(now())

    user User @relation(fields: [userId], references: [id])
}

model RefreshToken {
    id        Int      @id @default(autoincrement())
    userId    Int
    token     String   @unique
    createdAt DateTime @default(now())
    expiresAt DateTime

    user      User     @relation(fields: [userId], references: [id])
}
